<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background"
    tools:context=".CalorieCounter">



    <TextView
        android:id="@+id/textfoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YİYECEKLER"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#F60808"
        android:fontFamily="cursive"/>
    <TextView
        android:id="@+id/textfoods1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YİYECEKLER"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#F60808"
        android:layout_margin="1dp"
        android:fontFamily="cursive"/>
    <ImageView
        android:id="@+id/apple"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@drawable/apple"
        android:layout_below="@+id/textfoods"/>
    <ImageView
        android:id="@+id/banana"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/apple"
        android:layout_margin="5dp"
        android:src="@drawable/banana"/>
    <ImageView
        android:id="@+id/hamburger"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/banana"
        android:src="@drawable/hamburger"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/chicken_wings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/hamburger"
        android:src="@drawable/chickenwings"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/pizza"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/chicken_wings"
        android:layout_margin="5dp"
        android:src="@drawable/pizza"/>
    <ImageView
        android:id="@+id/pasta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/pizza"
        android:layout_margin="5dp"
        android:src="@drawable/pasta"/>
    <ImageView
        android:id="@+id/rice"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/pasta"
        android:src="@drawable/rice"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/appleinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textfoods1"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="1 Adet Elma : 52 kcal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bananainfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appleinfo"
        android:text="1 Adet Muz : 131 kcal"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="40dp"/>
    <TextView
        android:id="@+id/hamburgerinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bananainfo"
        android:layout_centerHorizontal="true"
        android:text="   1 Adet Hamburger : 313 kcal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/chickenwingsinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hamburgerinfo"
        android:layout_centerHorizontal="true"
        android:text="  1 Adet Tavuk Kanat : 99 kcal"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="40dp"/>
    <TextView
        android:id="@+id/pizzainfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chickenwingsinfo"
        android:text="1 Dilim Pizza : 241 kcal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/pastainfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizzainfo"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:text="1 Tabak Makarna : 229 kcal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/riceinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pastainfo"
        android:text="1 Tabak Pilav : 359 kcal"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:text="Çıkış Yap"
        android:layout_below="@+id/riceinfo"
        android:background="@drawable/button_background"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_marginTop="75dp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btn_nextpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riceinfo"
        android:layout_alignParentRight="true"
        android:text="Sonraki Sayfa"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calorieinfo1"
        android:layout_centerHorizontal="true"
        android:text="Sıfırla"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:layout_margin="5dp" />
    <Button
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/textfoods"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:onClick="add"
        />
    <Button
        android:id="@+id/add1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/add"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:onClick="add"
        />
    <Button
        android:id="@+id/add2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/add1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:onClick="add"
        />
    <Button
        android:id="@+id/add3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/add2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:onClick="add"
        />
    <Button
        android:id="@+id/add4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/add3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:onClick="add"
        />
    <Button
        android:id="@+id/add5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/add4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:onClick="add"
        />
    <Button
        android:id="@+id/add6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_below="@+id/add5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:onClick="add"
        />

    <TextView
        android:id="@+id/calorieinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:layout_below="@+id/rice"
        android:layout_marginLeft="40dp"
        android:textColor="#F30101"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/calorieinfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kcal"
        android:textSize="30sp"
        android:layout_below="@+id/riceinfo"
        android:layout_marginLeft="40dp"
        android:textColor="#F30101"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>